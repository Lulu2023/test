import time
pwd="AKS2608"     #any password u want to set

def IInd_func():
  count1=0 #initialising count variable
  
  while count1<5: # checking if count variable is less than 5 if it is equal to 5 the loop is broken
   user_pwd=input("Enter the password: ")
   if  user_pwd==pwd: # verifying the password
      print("Correct Password") 
      time.sleep(5)
      break # breaks out of the while loop
   else:
    count1+= 1# increasing the count variable
    if count1==5: # checking if maximum lmit has been reached
            print("Maximum limit reached")
    else:        
       print("Try again")
    

IInd_func()
